<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dam.lol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LolApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LOLDAM">
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SummonerActivity"
            android:theme="@style/Theme.LOLDAM.NoActionBar" />
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.ChampionRotationActivity"
            android:label="@string/title_rotation_activity" />
        <activity
            android:name=".activities.main.MainActivity"
            android:theme="@style/Theme.LOLDAM.NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
    </application>
</manifest>