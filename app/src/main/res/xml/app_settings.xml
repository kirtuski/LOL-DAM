<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Api Key">
        <EditTextPreference
            android:key="key"
            android:title="Api Key"
            app:useSimpleSummaryProvider="true"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/Otros_header">
    <androidx.preference.ListPreference
        android:key="@string/settings_theme_key"
        android:title="Tema"
        android:dialogTitle="Elige un tema"
        android:entries="@array/arrayTemas"
        android:entryValues="@array/valoresTemas"
        android:summary="%s"/>
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>