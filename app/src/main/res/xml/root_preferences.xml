<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Api Key">
        <EditTextPreference
            app:key="key"
            app:title="Api Key"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/miscellaneous_header">

        <ListPreference
            app:defaultValue="tema"
            app:entries="@array/tema_entries"
            app:entryValues="@array/tema_values"
            app:key="reply"
            app:title="@string/theme_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>